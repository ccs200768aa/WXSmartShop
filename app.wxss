/**app.wxss**/

.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  /* justify-content: space-between; */
  padding: 0;
  box-sizing: border-box;
  background: #f0f0f2;
  position: absolute;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.display {
  width: 100%;
}

text {
  font-family: 'Microsoft Yahei', '微软雅黑', '宋体';
}

.nowrap-text {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.h1 {
  margin: 20rpx 0 0 0;
  display: block;
  background: white;
  padding: 20rpx;
  border-bottom: 1px solid #d3d3d3;
}

.f12 {
  font-size: 12px;
}

.f14 {
  font-size: 14px;
}

.f30rpx {
  font-size: 30rpx;
}

.icon {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: #87c651;
  padding: 10rpx;
}

.icon-small {
  width: 30rpx;
  height: 30rpx;
}

.btn-save {
  background: #2baf2b;
  color: white;
}

.btn-del {
  background: #f24343;
  color: white;
}
