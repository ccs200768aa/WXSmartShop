
.address-list {
  overflow-y: scroll;
}
.add-btn{
  position: fixed;
  left: 0;
  bottom: 0; 
  width: 100%;
  height: 100rpx;
  border: none;
  border-radius: 0;
  background: #4d181e;
  color: white;
  text-align: center;
  line-height: 100rpx;
}

.address-column {
  background: white;
  width: 100%;
  height: 120rpx;
  border-bottom: 1px solid #d3d3d3;
  overflow: hidden;
  position: relative;
}

.address-column image {
  width: 60rpx;
  height: 60rpx;
}

.address-column image:first-child {
  position: absolute;
  left: 10rpx;
  top: 30rpx;
}
.address-column image:last-child{
  position: absolute;
  right: 20rpx;
  top:30rpx;
}
.address-text-group{
  position: absolute;
  top: 20rpx;
  left:90rpx;
}

.address-column text {
  display: block;
  width: 500rpx;
  height: 40rpx;
  font-size: 30rpx;
  color: #aaa;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
