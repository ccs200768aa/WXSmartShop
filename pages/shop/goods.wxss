.goods-brief {
  width: 100%;
  height: 220rpx;
  background: white;
  margin-top: 20rpx;
  padding: 30rpx 20rpx;
}

.goods-desc {
  width: 100%;
  margin-bottom: 100rpx;
}

.goods-desc image {
  margin: 10rpx 20rpx;
  width: 95%;
}

.buy-now {
  z-index: 9;
}

.cover {
  display: none;
  z-index: 10;
  position: fixed;
  left: 0;
  top: 0;
  background: #fff;
  width: 100%;
  height: 150%;
  opacity: 0;
  pointer-events: none;
  transition: all 0.3s linear;
}

.covered {
  z-index: 10;
  position: fixed;
  left: 0;
  top: 0;
  background: #000;
  opacity: 0.6;
  width: 100%;
  height: 150%;
  pointer-events: all;
  transition: all 0.3s linear;
}

.goods-pv {
  position: fixed;
  bottom: 0rpx;
  left: 0;
  width: 100%;
  height: 740rpx;
  transform: translate3d(0, 740rpx, 0);
  z-index: 11;
  background: #fff;
}

.goods-pv-checked {
  position: fixed;
  padding: 10rpx 20rpx;
  left: 0;
  width: 100%;
  height: 740rpx;
  transform: translate3d(0, 740rpx, 0);
  z-index: 11;
  background: #fff;
  bottom: 740rpx;
}

.pv-select {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.pv-select text {
  display: inline-flex;
  line-height: 74rpx;
  width: 20%;
  height: 74rpx;
  font-size: 28rpx;
}

.bottom-btn {
  display: block;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #4d181e;
  color: white;
  text-align: center;
  border-radius: 0;
}

.prop-value {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  width: 70%;
  line-height: 70rpx;
}

radio-group {
  display: inline-flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}

label {
  display: block;
  min-width: 100rpx;
  height: 50rpx;
  padding: 0 10rpx;
  line-height: 50rpx;
  text-align: center;
  margin: 10rpx 20rpx 10rpx 0;
  font-size: 12px;
}

.prop-radio {
  color: #000;
  border: 2rpx solid #d3d3d3;
}

.prop-radio-check {
  border: 2rpx solid #4d181e;
  color: #4d181e;
}

.buy-number {
}

.number {
  display: block;
  width: 50rpx;
  height: 50rpx;
  border: 2rpx solid #4d181e;
  overflow: hidden;
}
